.send-dynamic {
  position: relative;
  min-height: 100vh;
  background-color: #FFFFFF;
  padding: 20rpx 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.send-dynamic .dynamic-item ~ .dynamic-item {
  margin-top: 40rpx;
}
.send-dynamic .dynamic-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.send-dynamic .dynamic-item .img {
  width: 322rpx;
  height: 210rpx;
}
.send-dynamic .dynamic-item .img image {
  width: 100%;
  height: 100%;
  -webkit-border-radius: 14rpx;
          border-radius: 14rpx;
}
.send-dynamic .dynamic-item .right-info {
  margin-left: 12rpx;
}
.send-dynamic .dynamic-item .right-info .send-times {
  width: 354rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  color: #999999;
  line-height: 34rpx;
  margin-bottom: 16rpx;
}
.send-dynamic .dynamic-item .right-info .describe {
  width: 346rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  color: #666666;
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.send-dynamic .dynamic-item .right-info .operation {
  width: 346rpx;
