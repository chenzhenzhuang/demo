.process-box .to-be-process {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 40rpx;
}
.process-box .to-be-process .process-cover {
  width: 174rpx;
  height: 174rpx;
  margin-right: 20rpx;
}
.process-box .to-be-process .process-cover image {
  width: 100%;
  height: 100%;
  -webkit-border-radius: 14rpx;
          border-radius: 14rpx;
}
.process-box .to-be-process .process-info .process-instuaion {
  font-size: 32rpx;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 20rpx;
}
.process-box .to-be-process .process-info .process-time {
  font-size: 28rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 38rpx;
}
.process-box .to-be-process .process-info .process-tag {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.process-box .to-be-process .process-info .process-tag view {
  line-height: 28rpx;
  padding: 0 12rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  -webkit-border-radius: 4rpx;
          border-radius: 4rpx;
  border: 2rpx solid #d2d2d2;
  font-size: 20rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #c2c2c2;
}
.process-box .to-be-process .process-info .process-tag view ~ view {
  margin-left: 20rpx;
}
.process-box .no-item {
  width: 220rpx;
  margin: 0 auto;
  margin-top: 46rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.process-box .no-item .left, .process-box .no-item .right {
  width: 46rpx;
  height: 2rpx;
  background-color: #c2c2c2;
}
.process-box .no-item .middle {
  width: 96rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
  margin: 0 16rpx;
}

