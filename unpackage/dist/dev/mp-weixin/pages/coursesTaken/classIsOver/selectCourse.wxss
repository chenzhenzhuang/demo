.select-course {
  padding: 0 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.select-course .search-course {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.select-course .search-course .search-box {
  position: relative;
  width: 578rpx;
  height: 66rpx;
  -webkit-border-radius: 40rpx;
          border-radius: 40rpx;
  border: 2px solid #eeeeee;
}
.select-course .search-course .search-box input {
  width: 100%;
  height: 100%;
  padding-left: 70rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.select-course .search-course .search-box .place-style {
  font-size: 28rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  text-align: center;
}
.select-course .search-course .search-box image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 28rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.select-course .search-course .search-btn {
  margin-left: 18rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 600;
  color: #00b7f4;
}
.select-course .class-is-over {
  margin-top: 40rpx;
}
.select-course .class-is-over .class-over ~ .class-over {
  border-top: 2rpx solid #EEEEEE;
}
.select-course .class-is-over .class-over {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 214rpx;
}
.select-course .class-is-over .class-over .class-cover {
  width: 174rpx;
  height: 174rpx;
  margin-right: 18rpx;
}
.select-course .class-is-over .class-over .class-cover image {
  width: 100%;
  height: 100%;
}
.select-course .class-is-over .class-over .class-info view ~ view {
  margin-top: 14rpx;
}
.select-course .class-is-over .class-over .class-info .class-title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 600;
  color: #333333;
  line-height: 44rpx;
}
.select-course .class-is-over .class-over .class-info .course-catalogue,
.select-course .class-is-over .class-over .class-info .class-count {
  font-size: 28rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  color: rgba(0, 0, 0, 0.5);
}

